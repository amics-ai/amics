---
import Layout from '../layouts/Layout.astro';
import { createZenblogClient } from "zenblog";

// Initialize Zenblog client
const zenblog = createZenblogClient({ blogId: import.meta.env.ZENBLOG_BLOG_ID });

// Fetch posts from Zenblog
const posts = await zenblog.posts.list();
---

<Layout title="Blog | Amics">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <div class="py-16 sm:py-24">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
          Our Blog
        </h1>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
          Insights, updates, and stories from our team
        </p>
      </div>
    </div>

    <!-- Blog Post Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 pb-24">
      {posts.data.map((post) => (
        <article class="flex flex-col overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
          {post.cover_image && (
            <div class="flex-shrink-0">
              <img
                class="h-48 w-full object-cover"
                src={post.cover_image}
                alt={post.title}
              />
            </div>
          )}
          <div class="flex-1 bg-white p-6 flex flex-col justify-between">
            <div class="flex-1">
              {post.tags && (
                <div class="flex flex-wrap gap-2">
                  {post.tags.map((tag) => (
                    <p class="text-sm font-medium text-sky-600">
                      {tag.slug}
                    </p>
                  ))}
                </div>
              )}
              <a href={`/blog/${post.slug}`} class="block mt-2">
                <h3 class="text-xl font-semibold text-gray-900">
                  {post.title}
                </h3>
                <p class="mt-3 text-base text-gray-500">
                  {post.excerpt}
                </p>
              </a>
            </div>
            <div class="mt-6 flex items-center">
              
              <div class="ml-3">
            
                <div class="flex space-x-1 text-sm text-gray-500">
                  <time datetime={post.published_at}>
                    {new Date(post.published_at).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  <span aria-hidden="true">&middot;</span>
                  
                </div>
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </main>
</Layout>